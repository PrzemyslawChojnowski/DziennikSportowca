@model DziennikSportowca.Models.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<h2>Profile</h2>

@foreach (var invitation in Model.Invitations)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => invitation.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => invitation.User.Surname)
        </td>
        <td>
            @Html.ActionLink("Akceptuj", "AcceptInvitationToFriendship", "ApplicationUsers", new { userId = invitation.UserId, friendId = invitation.FriendId })
        </td>
    </tr>

}
