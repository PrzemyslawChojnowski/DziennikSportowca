@model DziennikSportowca.Models.UserFigure

<head>
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.js"></script>
    <script src="~/js/UserFigure/CreateNewUserFigureCircumferences.js" type="text/javascript"></script>
</head>

<div class="container-breadcrumb">
    <ol class="breadcrumb breadcrumb-arrow">
        <li><a asp-action="Index">Moje Pomiary</a></li>
        <li class="active"><span>Tworzenie pomiaru</span></li>
    </ol>
</div>

@{
    ViewData["Title"] = "Create";
}

@*<div id="dropzone" class="dropzone dz-clickable"></div>*@
<form enctype="multipart/form-data" asp-action="Create">
    <div class="form-horizontal">
        <h4>UserFigure</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group date" data-provide="datepicker" id="datepicker">
                    <div class="input-group-addon">
                        <span class="fa fa-calendar"></span>
                    </div>
                    <input asp-for="Date" type="text" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShouldersCircumference" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <div class="input-group-addon">
                        <img src="~/images/Icons/triceps.png" class="icon-img" />
                    </div>
                    <input asp-for="ShouldersCircumference" type="number" min="0" onkeypress="return event.charCode >= 48 || event.charCode == 44" class="form-control" />
                    <span asp-validation-for="ShouldersCircumference" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ChestCircumference" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <div class="input-group-addon">
                        <img src="~/images/Icons/triceps.png" class="icon-img" />
                    </div>
                    <input asp-for="ChestCircumference" type="number" min="0" onkeypress="return event.charCode >= 48 || event.charCode == 44" class="form-control" />
                    <span asp-validation-for="ChestCircumference" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WaistCircumference" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <div class="input-group-addon">
                        <img src="~/images/Icons/triceps.png" class="icon-img" />
                    </div>
                    <input asp-for="WaistCircumference" type="number" min="0" onkeypress="return event.charCode >= 48 || event.charCode == 44" class="form-control" id="WaistCircumference"/>
                    <span asp-validation-for="WaistCircumference" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BicepsCircumference" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <div class="input-group-addon">
                        <img src="~/images/Icons/triceps.png" class="icon-img" />
                    </div>
                    <input asp-for="BicepsCircumference" type="number" min="0" onkeypress="return event.charCode >= 48 || event.charCode == 44" class="form-control" />
                    <span asp-validation-for="BicepsCircumference" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TricepsCircumference" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <div class="input-group-addon">
                        <img src="~/images/Icons/triceps.png" class="icon-img" />
                    </div>
                    <input asp-for="TricepsCircumference" type="number" min="0" onkeypress="return event.charCode >= 48 || event.charCode == 44" class="form-control" />
                    <span asp-validation-for="TricepsCircumference" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ThighCircumference" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <div class="input-group-addon">
                        <img src="~/images/Icons/triceps.png" class="icon-img" />
                    </div>
                    <input asp-for="ThighCircumference" type="number" min="0" onkeypress="return event.charCode >= 48 || event.charCode == 44" class="form-control" />
                    <span asp-validation-for="ThighCircumference" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HipCircumference" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <div class="input-group-addon">
                        <img src="~/images/Icons/triceps.png" class="icon-img" />
                    </div>
                    <input asp-for="HipCircumference" type="number" min="0" onkeypress="return event.charCode >= 48 || event.charCode == 44" class="form-control" />
                    <span asp-validation-for="HipCircumference" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Weight" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="fa fa-balance-scale icon-img"></span>
                    </div>
                    <input asp-for="Weight" min="0" onkeypress="return event.charCode >= 48 || event.charCode == 44" class="form-control" id="Weight"/>
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BodyFat" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="fa fa-percent"></span>
                    </div>
                    <input asp-for="BodyFat" min="0" class="form-control" id="BodyFat" readonly/>
                    <span asp-validation-for="BodyFat" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Photos" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="fa fa-photo"></span>
                    </div>
                    <input type="file" class="form-control" name="files" id="files" multiple/>
                </div>
                @*<span asp-validation-for="Photos" class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

